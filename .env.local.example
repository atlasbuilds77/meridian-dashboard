# Base URL for redirects (REQUIRED for correct authentication flow)
BASE_URL=http://localhost:3001
NEXT_PUBLIC_BASE_URL=http://localhost:3001
# Production: https://your-domain.com

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:3001/api/auth/discord/callback
# Production: https://your-domain.com/api/auth/discord/callback

# Discord Server (Guild) Configuration (REQUIRED)
DISCORD_GUILD_ID=your_discord_server_id_here
SINGULARITY_ROLE_ID=your_singularity_role_id_here

# For client-side (Next.js requires NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_DISCORD_CLIENT_ID=your_discord_client_id_here

# Session Secret (REQUIRED - must be at least 32 characters)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_random_32_character_secret_here

# Encryption Key (REQUIRED for API key storage)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_random_32_character_encryption_key_here

# Database
DATABASE_URL=postgresql://<user>:<password>@<host>/<database>

# Tradier API
TRADIER_TOKEN=your_tradier_token_here

# Stripe billing (REQUIRED for weekly fee charging)
STRIPE_SECRET_KEY=sk_live_or_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_or_test_key_here

# Optional Redis-backed rate limiting
UPSTASH_REDIS_REST_URL=https://<your-upstash-endpoint>
UPSTASH_REDIS_REST_TOKEN=your_upstash_rest_token

# Admin Discord user IDs (comma-separated). Leave blank to disable admin access.
# Example: ADMIN_DISCORD_IDS=123456789012345678,987654321098765432
ADMIN_DISCORD_IDS=
